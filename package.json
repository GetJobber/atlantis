{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "docz dev",
    "test": "jest",
    "build": "docz build",
    "clean": "rm -rf .docz",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx . --format=codeFrame",
    "lint:css": "stylelint 'packages/**/*.css' --allow-empty-input",
    "lint:markdown": "prettier --check '**/*.md'",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:fix": "yarn lint:js --fix && yarn lint:css --fix && yarn lint:markdown --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GetJobber/atlantis.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/GetJobber/atlantis/issues"
  },
  "homepage": "https://github.com/GetJobber/atlantis#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "css-loader": "^2.1.1",
    "docz": "^1.0.0",
    "docz-theme-default": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.5.0",
    "husky": "^2.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.4.0",
    "lint-staged": "^8.1.6",
    "postcss": "^7.0.14",
    "postcss-loader": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-junit-formatter": "^0.2.1",
    "typed-css-modules-loader": "^0.0.17",
    "typescript": "^3.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --format=codeFrame --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.{md,mdx}": [
      "prettier --write",
      "git add"
    ]
  }
}
