{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "paths": {
      "@jobber/hooks": [
        "../hooks/src/index.ts"
      ],
      "@jobber/hooks/*": [
        "../hooks/src/*"
      ],
    },
    "types": [
      "react-native",
      "jest"
    ],
    "lib": [
      "es2019"
    ],
  },
  "jsx": "react-native",
  "include": [
    "src",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "tsconfig.eslint.json",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
  "references": [
    { "path": "../hooks" }
  ],
}
