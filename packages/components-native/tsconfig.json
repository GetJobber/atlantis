{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "rootDir": ".",
    "paths": {
      "@jobber/hooks/*": [
        "../../packages/hooks/src/*"
      ]
    },
    "types": [
      "react-native",
      "jest"
    ],
    "lib": [
      "es2019"
    ],
  },
  "jsx": "react-native",
  "include": [
    "src",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
  "references": [
    {
      "path": "../hooks"
    }
  ]
}