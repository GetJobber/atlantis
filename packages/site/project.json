{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@jobber/atlantis-site",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/site"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist/* tsconfig.tsbuildinfo",
        "cwd": "packages/site"
      }
    }
  }
} 