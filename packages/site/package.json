{
  "name": "@jobber/atlantis-site",
  "private": true,
  "version": "0.60.0",
  "type": "module",
  "scripts": {
    "dev": "npm run bundle && npm run copyFiles && vite --force",
    "bundle": "rollup -c editorBundle.rollup.config.js && rollup -c editorMobileBundle.rollup.config.js",
    "copyFiles": "cp ../design/dist/foundation.css ./public/foundation.css && cp ../components/dist/styles.css ./public/styles.css && cp ../design/dist/dark.mode.css ./public/dark.mode.css && cp ./node_modules/axios/dist/esm/axios.js ./public",
    "build": "npm run bundle && npm run copyFiles && tsc -b && vite build",
    "generate": "node generateDocs.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:visual:ci": "playwright test --config=playwright.config.ts tests/visual/",
    "test:visual:reload": "cd .. && npm run bootstrap && cd - && npm run test:visual",
    "test:visual": "../../scripts/e2e.sh playwright test --config=playwright.config.ts --project=chromium tests/visual/",
    "test:visual:update": "../../scripts/e2e.sh playwright test --config=playwright.config.ts  tests/visual/ --update-snapshots",
    "visual:update:single": "node scripts/visualTestHelper.mjs update",
    "visual:test:single": "node scripts/visualTestHelper.mjs test"
  },
  "dependencies": {
    "@babel/standalone": "^7.26.2",
    "@codemirror/lang-javascript": "^6.1.9",
    "@codemirror/language": "^6.8.0",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.14.1",
    "@jobber/components": "file:../components",
    "@jobber/hooks": "file:../hooks",
    "axios": "^1.11.0",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-element-to-jsx-string": "^15.0.0",
    "react-markdown": "^10.1.0",
    "react-native-svg-web": "^1.0.9",
    "react-router": "5.3.4",
    "react-router-dom": "5.3.4"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.25.9",
    "@babel/preset-react": "^7.26.3",
    "@mdx-js/react": "^3.0.1",
    "@mdx-js/rollup": "^3.0.1",
    "@playwright/test": "^1.52.0",
    "@react-native/babel-preset": "^0.76.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-replace": "^6.0.1",
    "@types/babel__standalone": "^7.1.9",
    "@types/node": "^22.10.1",
    "@types/prismjs": "^1.26.4",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "rehype-rewrite": "^4.0.2",
    "remark-gfm": "^4.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.3.1"
  }
}
