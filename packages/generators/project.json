{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@jobber/generators",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No build script for generators package'",
        "cwd": "packages/generators"
      },
      "outputs": [],
      "dependsOn": []
    },
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run clean && nx run @jobber/generators:build",
        "cwd": "packages/generators"
      },
      "outputs": [],
      "dependsOn": []
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config jest.config.js --testPathPattern=packages/generators --passWithNoTests",
        "cwd": "."
      },
      "outputs": ["{projectRoot}/coverage"],
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/**/*.{ts,tsx,js,jsx}",
        "{projectRoot}/**/*.test.{ts,tsx,js,jsx}",
        "{projectRoot}/**/*.spec.{ts,tsx,js,jsx}",
        "!{projectRoot}/node_modules/**/*"
      ]
    }
  }
} 