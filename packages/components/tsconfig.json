{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "types": ["node", "@testing-library/jest-dom"],
    "jsx": "react",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@jobber/hooks": [
        "../hooks/src/index.ts"
      ],
      "@jobber/hooks/*": [
        "../hooks/src/*"
      ],
      "@jobber/components/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../hooks"
    }
  ]
}
