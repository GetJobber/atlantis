{
  "name": "@jobber/hooks",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project . --skipLibCheck",
        "cwd": "packages/hooks"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": []
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist/* tsconfig.tsbuildinfo",
        "cwd": "packages/hooks"
      }
    },
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run clean; npm run build",
        "cwd": "packages/hooks"
      },
      "outputs": ["{projectRoot}/dist"]
    }
  }
}
