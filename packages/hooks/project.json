{
  "name": "@jobber/hooks",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project . --skipLibCheck",
        "cwd": "packages/hooks"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": []
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist/* tsconfig.tsbuildinfo",
        "cwd": "packages/hooks"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config jest.web.config.js --testPathPattern=packages/hooks",
        "cwd": "."
      },
      "outputs": ["{projectRoot}/coverage"],
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/**/*.{ts,tsx,js,jsx}",
        "{projectRoot}/**/*.test.{ts,tsx,js,jsx}",
        "{projectRoot}/**/*.spec.{ts,tsx,js,jsx}",
        "!{projectRoot}/node_modules/**/*"
      ]
    },
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run clean && nx run @jobber/hooks:build",
        "cwd": "packages/hooks"
      },
      "outputs": ["{projectRoot}/dist"]
    }
  }
}
