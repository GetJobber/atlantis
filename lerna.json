{
  "version": "independent",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): test Publish"
    },
    "publish": {
      "ignoreChanges": [
        "lerna.json",
        "package.json",
        "package-lock.json",
        "CHANGELOG.md"
      ],
      "env": {
        "INCLUDE_FONTS": false
      }
    }
  }
}
