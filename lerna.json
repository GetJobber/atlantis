{
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): Publish",
      "allowBranch": [
        "master",
        "test-ssh-key"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "lerna.json",
        "package.json",
        "package-lock.json",
        "CHANGELOG.md"
      ]
    }
  }
}
