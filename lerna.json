{
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): Publish",
      "allowBranch": [
        "master"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "**/.storybook/**",
        "**/*.stories.tsx",
        "lerna.json",
        "package.json",
        "package-lock.json",
        "CHANGELOG.md"
      ]
    }
  },
  "useWorkspaces": true
}
